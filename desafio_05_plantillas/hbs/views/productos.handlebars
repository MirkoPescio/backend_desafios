<section class="p-4 bg-secondary">
    <h2 class="text-warning text-4xl mb-5">Vista de Productos</h2>
    {{#if productos}}

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
            <tr>
                <td class="align-middle">{{this.name}}</td>
                <td class="align-middle">{{this.price}}</td>
                <td class="align-middle">
                    <img class="h-40" src="{{this.picture}}" alt="{{this.name}}">
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <h2 class="bg-light p-4 text-danger">No se encontraron productos</h2>
    {{/if}}
    <div class="mt-3">
        <a href="./productos">
            <button class="btn btn-warning">Agregar producto</button>
        </a>
    </div>
</section>